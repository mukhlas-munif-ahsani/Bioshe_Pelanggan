<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.register.RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:text="DAFTAR"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/salesQrButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="24dp"
                android:alpha="0.8"
                android:text="Scan QR Code Sales"
                android:textAllCaps="false"
                android:textColor="@color/biru_dasar"
                app:icon="@drawable/ic_scan"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconSize="15dp"
                app:iconTint="@null"
                app:strokeColor="@color/biru_dasar" />

            <TextView
                android:id="@+id/qrWarning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="24dp"
                android:text="Scan QR Code sales terlebih dahulu untuk mengisi form"
                android:textAlignment="center"
                android:textColor="@color/biru_dasar"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:alpha="0.8"
                android:text="Akun"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="normal" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/emailInLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:background="@color/biru_muda"
                android:enabled="false"
                android:hint="Email"
                android:textColorHint="@color/biru_dasar"
                app:boxBackgroundColor="@color/biru_muda">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailEdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:inputType="textEmailAddress" />

            </com.google.android.material.textfield.TextInputLayout>

<!--            <com.google.android.material.textfield.TextInputLayout-->
<!--                android:id="@+id/usernameInLay"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginStart="24dp"-->
<!--                android:layout_marginTop="18dp"-->
<!--                android:layout_marginEnd="24dp"-->
<!--                android:background="@color/biru_muda"-->
<!--                android:enabled="false"-->
<!--                android:hint="Username"-->
<!--                android:textColorHint="@color/biru_dasar"-->
<!--                app:boxBackgroundColor="@color/biru_muda">-->

<!--                <com.google.android.material.textfield.TextInputEditText-->
<!--                    android:id="@+id/usernameEdt"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:inputType="text" />-->

<!--            </com.google.android.material.textfield.TextInputLayout>-->

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/passwordInLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="24dp"
                android:background="@color/biru_muda"
                android:enabled="false"
                android:hint="Password"
                android:textColorHint="@color/biru_dasar"
                app:boxBackgroundColor="@color/biru_muda"
                app:endIconMode="password_toggle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/passwordEdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/confirmPasswordInLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="24dp"
                android:background="@color/biru_muda"
                android:enabled="false"
                android:hint="Konfimasi Password"
                android:textColorHint="@color/biru_dasar"
                app:boxBackgroundColor="@color/biru_muda"
                app:endIconMode="password_toggle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/confirmPasswordEdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:alpha="0.8"
                android:text="Data diri"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="normal" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_profileImage"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_profile"
                android:visibility="gone"
                app:civ_border_color="@color/biru_muda" />

            <TextView
                android:id="@+id/profileImageError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/red"
                android:visibility="gone" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/nikInLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="24dp"
                android:background="@color/biru_muda"
                android:enabled="false"
                android:hint="NIK"
                android:textColorHint="@color/biru_dasar"
                app:boxBackgroundColor="@color/biru_muda">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nikEdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/namaInLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="24dp"
                android:background="@color/biru_muda"
                android:enabled="false"
                android:hint="Nama Depan"
                android:textColorHint="@color/biru_dasar"
                app:boxBackgroundColor="@color/biru_muda">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/namaEdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/namaBelakangInLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="24dp"
                android:background="@color/biru_muda"
                android:enabled="false"
                android:hint="Nama Belakang"
                android:textColorHint="@color/biru_dasar"
                app:boxBackgroundColor="@color/biru_muda">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/namaBelakangEdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/genderInLay"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="24dp"
                android:background="@color/biru_muda"
                android:enabled="false"
                android:hint="Jenis Kelamin"
                android:textColorHint="@color/biru_dasar"
                app:boxBackgroundColor="@color/biru_muda">

                <AutoCompleteTextView
                    android:id="@+id/genderAuto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/alamatInLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="24dp"
                android:background="@color/biru_muda"
                android:enabled="false"
                android:hint="Alamat Rumah"
                android:textColorHint="@color/biru_dasar"
                app:boxBackgroundColor="@color/biru_muda">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/alamatEdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/nohpInLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="24dp"
                android:background="@color/biru_muda"
                android:enabled="false"
                android:hint="No HP"
                android:textColorHint="@color/biru_dasar"
                app:boxBackgroundColor="@color/biru_muda">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nohpEdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/nowaInLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="24dp"
                android:background="@color/biru_muda"
                android:enabled="false"
                android:hint="No WA"
                android:textColorHint="@color/biru_dasar"
                app:boxBackgroundColor="@color/biru_muda">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nowaEdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ahliWarisInLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="24dp"
                android:background="@color/biru_muda"
                android:enabled="false"
                android:hint="Ahli Waris"
                android:textColorHint="@color/biru_dasar"
                app:boxBackgroundColor="@color/biru_muda">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ahliWarisEdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/kotaInLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="24dp"
                android:background="@color/biru_muda"
                android:enabled="false"
                android:hint="Kota"
                android:textColorHint="@color/biru_dasar"
                app:boxBackgroundColor="@color/biru_muda">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/kotaEdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/kodePosInLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="24dp"
                android:background="@color/biru_muda"
                android:enabled="false"
                android:hint="Kode Pos Kota anda"
                android:textColorHint="@color/biru_dasar"
                app:boxBackgroundColor="@color/biru_muda">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/kodePosEdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/namaOutletInLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="24dp"
                android:background="@color/biru_muda"
                android:enabled="false"
                android:hint="Nama Outlet"
                android:textColorHint="@color/biru_dasar"
                app:boxBackgroundColor="@color/biru_muda">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/namaOutletEdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/alamatOutletInLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="24dp"
                android:background="@color/biru_muda"
                android:enabled="false"
                android:hint="Alamat Outlet"
                android:textColorHint="@color/biru_dasar"
                app:boxBackgroundColor="@color/biru_muda">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/alamatOutletEdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/daftarBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="24dp"
                android:enabled="false"
                android:text="DAFTAR" />

            <Button
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/goToLogin"
                android:layout_marginStart="24dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="8dp"
                android:text="MASUK" />

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/progressRel"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.3"
            android:background="@color/black" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="251dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/progressTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:layout_marginTop="18dp"
                    android:text="Membuat akun" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="34dp" />

                <TextView
                    android:id="@+id/progressTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="18dp"
                    android:text="Loading..." />

                <ProgressBar
                    android:id="@+id/horizontalProgressBar"
                    android:layout_width="match_parent"
                    android:visibility="invisible"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:text="Mohon tunggu !!" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>