<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.munifahsan.biosheapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/bioshe_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/bioshe_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.BIOSHEAPP"
        tools:replace="android:allowBackup">
        <service
            android:name=".utils.FirebaseMessageService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" />

        <activity android:name=".ui.tagihan.BayarTagihanActivity" />
        <activity android:name=".ui.tagihan.TagihanActivity" />
        <activity android:name=".ui.forgetPassword.ForgetPasswordActivity" />
        <activity android:name=".ui.promo.PromoActivity" />
        <activity android:name=".ui.tampilGambar.ImageViewActivity" />
        <activity android:name=".ui.reward.RewardActivity" />
        <activity android:name=".ui.loyalti.LoyaltiActivity" />
        <activity android:name=".ui.dataDiri.DataDiriActivity" />
        <activity android:name=".ui.chatRoom.ChatRoomActivity">
            <intent-filter>
                <action android:name="OPEN_CHAT_ROOM" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.contactList.ContactListActivity" />
        <activity android:name=".ui.transferBayar.TransferBayarActivity" />
        <activity android:name=".ui.detailPesanan.DetailPesananActivity" />
        <activity android:name=".ui.cariProduk.SearchProductActivity" />
        <activity android:name=".ui.aturPesanan.AturPesananActivity" />
        <activity android:name=".ui.detailProduk.DetailProductActivity" />
        <activity android:name=".ui.notif.NotifActivity" />
        <activity android:name=".ui.login.LoginActivity" />
        <activity android:name=".ui.splashScreen.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.register.RegisterActivity" />
        <activity android:name=".ui.keranjang.CartActivity" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".utils.CaptureAct"
            android:screenOrientation="fullSensor"
            android:stateNotNeeded="true"
            android:windowSoftInputMode="stateAlwaysHidden" />

    </application>

</manifest>